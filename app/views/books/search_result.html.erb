<h2>Books search for "<%= @tag %>"</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(50, 50) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      <td><%= link_to book.tag, tag_searches_path(:tag => book.tag) %></td>
      <td class=<%= "favorite-" + book.id.to_s %> >
        <%= render "favorites/btn", book: book %>
      </td>
      <td>コメント数：<%= book.book_comments.count %></td>
      <td id="star-rate<%= book.id%>"></td>
      <%= render 'books/raty', book: book %>
    </tr>
    <% end %>
  </tbody>
</table>